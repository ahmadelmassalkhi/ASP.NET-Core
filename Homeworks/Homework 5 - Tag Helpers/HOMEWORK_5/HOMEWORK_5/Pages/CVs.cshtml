@page
@model HOMEWORK_5.Pages.CVsModel
@{
}



<div class="container">
    <h2>CVs</h2>
    <a asp-page="AddCV" class="btn btn-success">Create</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Photo</th>
                <th>Tools</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cv in Model.CVs)
            {
                <tr>
                    <!-- CV information -->
                    <td>@cv.Id</td>
                    <td>@cv.FirstName</td>
                    <td>@cv.LastName</td>
                    <td>@cv.Email</td>
                    <td><a href="@cv.PhotoURL">@cv.FirstName</a></td>
                    <td>
                        <form method="post" asp-page-handler="Delete" asp-route-id="@cv.Id">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>